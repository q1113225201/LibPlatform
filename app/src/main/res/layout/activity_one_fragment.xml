<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_load1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载Fragment1" />

    <Button
        android:id="@+id/btn_load2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_load1"
        android:text="加载Fragment2" />

    <Button
        android:id="@+id/btn_load3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_load2"
        android:text="加载Fragment3" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_load3"></FrameLayout>

</RelativeLayout>